datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id        String   @id @default(uuid())
    username  String   @unique
    email     String   @unique
    password  String
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now()) @updatedAt
}

model Task {
    id          String   @id @default(uuid())
    title       String
    description String
    createdAt   DateTime @default(now())
    updatedAt   DateTime @default(now()) @updatedAt
}
